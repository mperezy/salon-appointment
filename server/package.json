{
  "name": "server",
  "version": "1.0.0",
  "description": "A quick server",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "check-types": "tsc --noemit",
    "lint": " yarn check-types && eslint src/",
    "dev": "node --env-file=.env --watch-path=./src --experimental-transform-types --import tsx --require tsconfig-paths/register src/index.ts",
    "prisma:db:pull": "echo \"**** Introspecting DB schema which means will get all database schema into src/prisma/schema.prisma file.\" ; npx prisma db pull",
    "prisma:db:generate": "echo \"**** Generating types\" ; npx prisma generate",
    "graphql:generate": "echo \"**** Generating GraphQL types\" ; graphql-codegen"
  },
  "keywords": [
    "Interview"
  ],
  "prisma": {
    "schema": "src/prisma/schema.prisma"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollo/server": "^4.11.3",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@prisma/client": "^6.3.1",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "graphql": "^16.10.0",
    "morgan": "^1.10.0",
    "nexus": "^1.3.0",
    "pg": "^8.13.1",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.2"
  },
  "devDependencies": {
    "@babel/core": "^7.26.8",
    "@eslint/js": "^9.19.0",
    "@graphql-codegen/cli": "^5.0.4",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "@types/pg": "^8.11.11",
    "eslint": "^9.19.0",
    "globals": "^15.14.0",
    "prettier": "^3.4.2",
    "prisma": "^6.3.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.23.0"
  }
}
