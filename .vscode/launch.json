    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch App",
            "request": "launch",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch API",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/app/src/api/src/index.ts",
            "outFiles": [
                "${workspaceFolder}/app/**/*.js"
            ]
        }
    ]
}